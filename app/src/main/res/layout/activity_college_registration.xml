                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:background="#6c8487"/>

                <EditText
                    android:id="@+id/college_program_name9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:padding="6dp"
                    android:textSize="13.5dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Program name"/>
                <EditText
                    android:id="@+id/college_annual_fee9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:padding="6dp"
                    android:textSize="13.5dp"
                    android:hint="Program fee(NRs)"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/add_more_college_programs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            android:text="Add more +"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:text="Admission Open:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="From:"/>
            <EditText
                android:id="@+id/college_admission_startDate"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_edittext"
                android:padding="6dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="12dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="To:"/>
            <EditText
                android:id="@+id/college_admission_end_date"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:background="@drawable/rounded_edittext"
                android:padding="6dp"
                android:layout_marginLeft="7dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:text="College Logo:"/>
            <ImageView
                android:id="@+id/register_college_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:background="@mipmap/logoholder"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="18dp"
            android:text="Google Map Location URL:"/>

        <EditText
            android:id="@+id/register_college_map_Url"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edittext"
            android:padding="6dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_submit"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:textColor="#fff"
                android:text="Submit"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_discard"
                android:textColor="#fff"
                android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
