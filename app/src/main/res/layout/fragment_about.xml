<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/aboutFragment"
    tools:context="com.example.user.educationhunt.fragment.About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/institution"/>
                <TextView
                    android:id="@+id/about_school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2a2e35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="Lalitpur Nursing Campus"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location"/>
                <TextView
                    android:id="@+id/about_school_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="Sanepa Lalitpur,44700,"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/phonecalls"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/call"/>
                <TextView
                    android:id="@+id/about_school_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="+977-01-5521634"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/type"/>
                <TextView
                    android:id="@+id/about_school_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="Private"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/collegeAffiliation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/network"/>
                <TextView
                    android:id="@+id/about_college_affiliation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="Affiliation"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/sendEmails"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/email"/>
                <TextView
                    android:id="@+id/about_school_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="lalitpurnursingcampus@gmail.com"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:id="@+id/weblink"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/web"/>
                <TextView
                    android:id="@+id/about_school_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:text="http://www.lnc.edu.np"/>

            </LinearLayout>
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapview"
                android:layout_width="fill_parent"
                android:layout_height="380dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
